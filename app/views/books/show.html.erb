<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:"jpeg", fallback: "no_image.jpg" %>
          <table class="table">
           <tbody><tr></tr>
           <tr>
	         <th>name</th>
	         <th><%= @user.name %></th>
           </tr>
           <tr>
	         <th>introduction</th>
	         <th><%= @user.introduction %></th>
           </tr>
          </tbody>
        </table>
          
          <div class="row">
            <%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
          </div>
          
          <h2 class="mt-3">New book</h2>
          <%= form_with model:@book, local:true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit "Create Book", class: "btn btn-success" %>
          <% end %>
    </div>
          
    <div class = "col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class ="table">
            <tbody>
                <tr>
                    <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format:"jpeg", fallback: "no_image.jpg", size: "40x40" %></td>
                    <td><%= link_to @user.name,user_path(@user.id) %></td>
                    <td><%= @books.title %></td>
                    <td><%= @books.body %></td>
                    <% if @user.id == current_user.id %>
                    <td><%= link_to "Edit", edit_book_path(@books), class:"btn btn-success" %></td>
                    <td><%= link_to "Destroy", book_path(@books), class: "btn btn-danger", method: :delete, data: {confirm: "削除しますか？"} %></td>
                    <% end %>
                    <td colspan = "3"></td>
                </tr>
            </tbody>
        </table>
    </div>
  </div>
</div> 